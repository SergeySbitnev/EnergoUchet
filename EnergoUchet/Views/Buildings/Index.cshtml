@model EnergoUchet.Models.BuildingListViewModel

@{
    ViewBag.Title = "Объекты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="get">
    <div class="form-inline">
        <br />
        <label class="control-label" style="font-size: 24px">Объекты организаций: </label>
        @Html.DropDownList("consumer", Model.Consumers as SelectList, htmlAttributes: new { @class = "form-control" })

        <input type="submit" value="Фильтр" class="btn btn-default" />
    </div>
</form>
<br />
<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>Организация </th>
        <th>Страна</th>
        <th>Город</th>
        <th>Адрес</th>
        <th>Площадь</th>
        <th> Штат</th>
        <th></th>
    </tr>

@foreach (var item in Model.Buildings) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Consumer.Organization)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Town)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Square)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Staff)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
        </td>
    </tr>
}
</table>

<p>
    @Html.ActionLink("Экспорт в Excel", "Export")
</p>
