@model EnergoUchet.Models.MeterReadingListViewModel
@{
    ViewBag.Title = "Главная";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin: auto; width: 800px;">
    <form method="get">
        <div class="form-inline">
            <br />
            <label class="control-label" style="font-size: 24px">Прибор учета: </label>
            @Html.DropDownList("meteringDevice", Model.MeteringDevices as SelectList, htmlAttributes: new { @class = "form-control" })

            <input type="submit" value="Показать" class="btn btn-default" />
        </div>
    </form>
    <br />

    <img src="/Content/img/chart01.jpg" />
    <br />
    <hr />
    <table class="table table-bordered table-hover">
        <tr>
            <td>
                Дата
            </td>
            <td>
                Потребление
            </td>
        </tr>

        @for (int item = 0; item < 6; item++)
        {
            <tr>
                <th>
                    @ViewBag.Message[0, item]
                </th>
                <th>
                    @ViewBag.Message[1, item]
                </th>
            </tr>
        }
    </table>
</div>
